<% provide :title, t(".page_title") %>
<div class="center jumbotron">
  <h1>
    <%= t ".heading" %>
  </h1>
  <h2>
    <%= t ".intro" %>
    <%= link_to t(".title"), Settings.rails_home_link %>
    <%= t ".name" %>
  </h2>
  <%= link_to t(".sign_up"), new_user_path, class: "btn btn-lg btn-primary" %>
</div>
<div class="rails-logo">
  <%= link_to image_tag(Settings.rails_logo_link), Settings.ruby_on_rails_link, class: "image-link" %>
</div>
