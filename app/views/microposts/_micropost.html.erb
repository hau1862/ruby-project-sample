<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp"><%= t ".time_ago", time: time_ago_in_words(micropost.created_at) %></span>
  <span>
  <% if current_user? micropost.user %>
    <%= link_to t(".delete"), micropost, method: :delete, data: {confirm: t(".data_confirm")} %>
  <% end %>
  </span>
</li>
