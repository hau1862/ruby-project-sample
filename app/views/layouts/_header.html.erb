<header class="navbar navbar-fixed-top navbar-inverse">
  <div id="logo">
    <%= link_to t(".logo"), "#" %>
  </div>
  <nav>
    <ul class="nav navbar-nav navbar-right nav-list">
      <li class="nav-item">
        <%= link_to t("static_page.home.page_title"), root_path %>
      </li>
      <li class="nav-item">
        <%= link_to t("static_page.help.page_title"), help_path %>
      </li>
      <% if logged_in? %>
        <li><%= link_to "Users", users_path %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= t(".account") %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), current_user %></li>
            <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li class="nav-item"><%= link_to "Log in", login_path %></li>
      <% end %>
      <li class="nav-item">
        <%= link_to "En", locale:"en" %>
      </li>
      <li class="nav-item">
        <%= link_to "Vi", locale:"vi" %>
      </li>
    </ul>
  </nav>
</header>
