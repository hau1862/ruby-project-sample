<% provide :title, t(".page_title") %>
<div class="page__login">
  <h1>
    <%= t ".heading" %>
  </h1>
  <%= form_for(:sessions, url: login_path) do |f| %>
    <%= f.label :email, t(".email") %>
    <%= f.email_field :email, class: "form-item" %>
    <%= f.label :password, t(".password") %>
    <%= f.password_field :password, class: "form-item" %>
    <%= f.label :remember_me, class: "checkbox inline" do %>
       <%= f.check_box :remember_me %>
       <span><%= t ".remember_text" %></span>
     <% end %>
    <%= f.submit t(".submit_text"), class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to t("static_page.home.sign_up") ,  new_user_path %>
</div>
