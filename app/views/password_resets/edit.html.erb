<% provide :title, t(".page_title") %>
<div class="page page__password-reset">
  <h1><%= t ".heading" %></h1>
  <%= form_for @user, url: password_reset_path(@user.id) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= hidden_field_tag :email, @user.email %>
    <%= f.label :password, t("password") %>
    <%= f.password_field :password, class: "form-item" %>
    <%= f.label :password_confirmation, t(".passoword_confirm") %>
    <%= f.password_field :password_confirmation, class: "form-item" %>
    <br>
    <%= f.submit t(".submit_text"), class: "btn btn-primary" %>
  <% end %>
</div>
