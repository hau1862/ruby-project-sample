<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: @user %>
  <%= f.label :name, t(".name") %>
  <%= f.text_field :name, class: "form-item", value: @user.name  %>
  <%= f.label :email, t(".email") %>
  <%= f.email_field :email, class: "form-item", value: @user.email  %>
  <%= f.label :password, t(".password") %>
  <%= f.password_field :password, class: "form-item" %>
  <%= f.label :password_confirmation, t(".password_confirm") %>
  <%= f.password_field :password_confirmation, class: "form-item" %>
  <%= f.submit yield(:submit_btn), class: "btn btn-success" %>
<% end %>
