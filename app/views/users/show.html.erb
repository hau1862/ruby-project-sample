<% provide :title, t(".page_title") %>

<h1>
  <%= t ".heading" %>
</h1>
<div class="user-info">
  <div class="user-avatar">
    <%= gravatar_for @user %>
  </div>
  <div class="user-desc">
    <%= t ".name" %><%= @user.name %>
    <br />
    <%= t ".email" %><%= @user.email %>
    <br />
    <%= t ".created_at" %><%= @user.created_at.strftime Settings.date.format %>
    <br />
    <%= t ".updated_at" %><%= @user.updated_at.strftime Settings.date.format %>
  </div>
</div>

<div class="microposts">
  <%= render "follow_form" if logged_in? %>
  <% if @microposts.any? %>
    <h3><%= t ".count", count: @microposts.count %></h3>
    <ol class="micropost-list">
      <%= render @microposts %>
    </ol>
    <%= paginate @microposts, theme: "twitter-bootstrap-3" %>
  <% end %>
</div>
