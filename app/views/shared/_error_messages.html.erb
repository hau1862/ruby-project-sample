<% if @user.errors.any? %>
  <div id="error-desc">
    <div class="alert alert-danger">
      <%= t ".show_error_number", error_number: @user.errors.count %>
    </div>
    <ul>
      <% @user.errors.messages.each do |attribute, message| %>
        <li><%= "#{attribute.to_s.capitalize}: #{message[0]}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
